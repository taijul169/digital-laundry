<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
        <!-- Castro fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
     <!-- owl-carousel -->
    <link rel="stylesheet" href="assets/plugin/css/owl.carousel.min.css"/>
    <link rel="stylesheet" href="assets/plugin/css/owl.theme.default.min.css" />
    <!-- animate-css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <!-- nivo-slider -->
    <link rel="stylesheet" href="assets/plugin/css/default.css">
    <link rel="stylesheet" href="assets/plugin/css/nivo-slider.css">
     <!-- font-awesome    -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
     <!-- lightbox-gallery -->
     <link rel="stylesheet" href="assets/plugin/css/simple-lightbox.min.css">
     <!-- flat-icon -->
     <link rel="stylesheet" href="assets/font/flaticon.css">
    <!-- progressbar -->
    <link rel="stylesheet" href="assets/plugin/css/jquery.rprogessbar.min.css">
    <!-- aos.css -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
     <!-- main-style    -->
    <link rel="stylesheet" href="css/style.min.css">
    <!-- <link rel="stylesheet" href="responsive.css"> -->
    <title>Aristocrat</title>
</head>
<body>
    <div class="login-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lx-6 col-lg-6 col-12 col-sm-12 offset-md-3 offset-lg-3 offset-xl-3">
                      {{#if message}}
                        <div class="alert alert-success" role="alert">
                            {{message}}
                        </div>

                        {{/if}}
                      
                      {{#if errorMsg}}
                        <div class="alert alert-warning" role="alert">
                            {{errorMsg}}
                        </div>

                        {{/if}}
                         {{#if wrongkeyword}}
                        <div class="alert alert-warning" role="alert">
                            {{wrongkeyword}}
                        </div>

                        {{/if}}
                         {{#if emptyMsg}}
                        <div class="alert alert-warning" role="alert">
                            {{emptyMsg}}
                        </div>

                        {{/if}}
                    <div class="login-box text-center">
                        <form  method="POST" action ="/admin/login">
                            <h4>Login</h4>
                            <!-- email -->
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" placeholder="Enter your email" name="loginEmail">
                            </div>
                            <!-- password -->
                            <div class="form-group">
                                <label for="password">Password <a href="#">Forgot password?</a></label>
                                <input type="password" placeholder="Enter your password" name="loginpassword">
                            </div>
                            <div class="form-group">
                                <button type ="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" ></script>
    <script src="js/custom.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    
    <script src="active.js"></script>
    <script src="formValidate.js"></script>
    <script src="home.js"></script>

</body>

</html>