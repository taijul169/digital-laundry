            <div class="container-fluid">
               <div class="login-wrapper">
                    <div class="container">
                        <div class="row">
                            <!-- Row -->
                            <div class="row">
                                <!-- Column -->
                                <div class="col-lg-12 col-xlg-12 col-md-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <form class="form-horizontal form-material" action="/admin/create-admin" method="POST">
                                                <div class="form-group mb-4">
                                                    <label class="col-md-12 p-0">Full Name</label>
                                                    <div class="col-md-12 border-bottom p-0">
                                                        <input type="text" placeholder="Johnathan Doe"
                                                            class="form-control p-0 border-0" name="firstName"> </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <label for="example-email" class="col-md-12 p-0">Email Address</label>
                                                    <div class="col-md-12 border-bottom p-0">
                                                        <input type="email" placeholder="johnathan@admin.com"
                                                            class="form-control p-0 border-0" name="email"
                                                            id="example-email">
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <label for="amin role" class="col-md-12 p-0">Admin Role</label>
                                                    <div class="col-md-12 border-bottom p-0">
                                                        <select name="adminRole" id="">
                                                            <option value="1">Super Admin</option>
                                                            <option value="2">Secoindary Admin</option>
                                                            <option value="3">Moderater</option>
                                                            <option value="4">Editor</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="form-group mb-4">
                                                    <label class="col-md-12 p-0">Password</label>
                                                    <div class="col-md-12 border-bottom p-0">
                                                        <input type="password" class="form-control p-0 border-0" placeholder="Enter your password" name="password">
                                                    </div>
                                                </div>

                                                <div class="form-group mb-4">
                                                    <div class="col-sm-12">
                                                        <button class="btn btn-success" type="submit">Create Admin</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- Column -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
